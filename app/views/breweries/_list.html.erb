<table class="table table-hover">
  <thead>
  <tr>
    <%
      if o == "asc"
        o = "desc"
      else if o == "desc"
        o ="asc" end
      end
    %>
    <th> <%= link_to 'Name', breweries_path(order:"name", list: list, o: o) %> </th>
    <th> <%= link_to 'Year', breweries_path(order:"year", list: list, o: o) %> </th>
  </tr>
  </thead>

  <tbody>
  <% breweries.each do |brewery| %>
      <tr>
        <td><%= link_to brewery.name, brewery %></td>
        <td><%= brewery.year %></td>
        <td></td>
      </tr>
  <% end %>
  </tbody>
</table>